{#def user, items, prev=None, current=None #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/beercss@3.6.13/dist/cdn/beer.min.css" rel="stylesheet" />
    <script type="module" src="https://cdn.jsdelivr.net/npm/beercss@3.6.13/dist/cdn/beer.min.js"></script>
    <script type="module" src="https://cdn.jsdelivr.net/npm/material-dynamic-colors@1.1.2/dist/cdn/material-dynamic-colors.min.js"></script>
    <title>Title</title>
</head>
<body class="light horizontal">
<nav class="drawer left">
    {% if user %}
        <FolderView items={{ items }} prev={{ prev }} current={{ current }}></FolderView>
    {% else %}
        <a class="border large center middle" href="{{ url_for('login') }}">Login with google</a>
    {% endif %}
</nav>
<main class="responsive">
    <header>
        <nav>
            <button class="circle transparent"><i>arrow_back</i></button>
            <div class="field max center-align">
                <select>
                    <option>TODO</option>
                </select>
                <i>arrow_drop_down</i>
            </div>
            <button class="circle transparent"><i>arrow_forward</i></button>
        </nav>
    </header>
    {% if current and current.filetype == 'DriveFile' %}
        <iframe class="max" style="position: relative; width: 100%; height: 100%" src="{{ current.get_preview_url() }}"></iframe>
    {% else %}
        <article class="max auto-height border center-align middle-align">
            <i>draft</i>
            <span>No document chosen...</span>
        </article>
    {% endif %}
</main>
</body>
</html>